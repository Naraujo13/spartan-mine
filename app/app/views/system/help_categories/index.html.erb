<h1>Listing system_help_categories</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @system_help_categories.each do |system_help_category| %>
      <tr>
        <td><%= system_help_category.description %></td>
        <td><%= link_to 'Show', system_help_category %></td>
        <td><%= link_to 'Edit', edit_system_help_category_path(system_help_category) %></td>
        <td><%= link_to 'Destroy', system_help_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

