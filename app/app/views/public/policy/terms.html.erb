        </div>
        <div>
          <%=t'policy_last_update'%> <%=@config.terms_of_user_last_change%>
        </div>
      </div>
    </div>
    <div class='flex-1' style="padding:40px 10px">
      <img src='/assets/site/privacity_shield.svg'>
    </div>
  </div>
